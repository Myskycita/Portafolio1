---
interface BlogCardProps {
  title: string;
  description: string;
  date: string;
  link: string;
  readingTime: string;
}

const { title, description, date, link, readingTime } =
  Astro.props as BlogCardProps;
---

<a
  href={link}
  rel="prefetch"
  class="flex flex-col gap-y-5 hover:no-underline p-4 mb-8 hover:bg-neutral-700 transition-colors rounded-xl w-[370px] md:w-[550px]"
>
  <h3 class="text-white text-xl md:text-2xl font-extrabold">{title}</h3>

  <p class="text-sm text-white md:text-base">{description}</p>

  <div class="flex items-center gap-x-2 text-neutral-200 text-xs md:text-sm">
    <span>ðŸ“…</span>
    <time datetime={date}>
      {
        new Date(date).toLocaleDateString("en-us", {
          year: "numeric",
          month: "short",
          day: "numeric",
        })
      }
    </time>
  </div>
</a>
